<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mi primer CRUD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .btn-close-custom {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

        .btn-save-custom {
            background-color: #198754;
            border-color: #198754;
            color: white;
        }

            .btn-close-custom:hover, .btn-save-custom:hover {
                opacity: 0.8;
                color: white;
            }

        .table th {
            background-color: #212529 !important; /* Fondo oscuro para encabezados */
            color: white !important; /* Texto blanco */
        }

        .search-box {
            max-width: 300px;
        }

        /* Nuevos estilos para los botones de acción */
        .btn-action {
            color: white !important;
            border: none;
            width: 32px;
            height: 32px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin: 0 2px;
            padding: 0;
        }

        .btn-danger-custom {
            background-color: #dc3545;
        }

        .btn-primary-custom {
            background-color: #0d6efd;
        }

        .btn-success-custom {
            background-color: #198754;
        }

        .btn-action:hover {
            opacity: 0.9;
            color: white !important;
        }

        .btn-action i {
            color: white !important;
            font-size: 16px;
        }

        /* Asegurar que la tabla tenga buen contraste */
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.02);
        }

        .table-bordered {
            border: 1px solid #dee2e6;
        }

            .table-bordered th,
            .table-bordered td {
                border: 1px solid #dee2e6;
            }

        /* Estilos para paginación */
        .pagination .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
            color: white;
        }

        .pagination .page-link {
            color: #0d6efd;
            border: 1px solid #dee2e6;
        }

            .pagination .page-link:hover {
                color: #0a58ca;
                background-color: #e9ecef;
                border-color: #dee2e6;
            }

        .pagination .page-item.disabled .page-link {
            color: #6c757d;
            pointer-events: none;
            background-color: #fff;
            border-color: #dee2e6;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>